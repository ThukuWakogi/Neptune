<Page
    x:Class="Neptune.Views.FliesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Neptune.Views"
    xmlns:data="using:Neptune.Models"
    xmlns:controls="using:Neptune.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <Style x:Key="TestSample" TargetType="Grid">
            <Setter Property="Margin" Value="5,5,5,0"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Page.Resources>
    <Grid>
        <SplitView IsPaneOpen="True" DisplayMode="Inline">
            <SplitView.Pane>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="1" BorderBrush="White" BorderThickness="5 0 0 0"/>
                    <CommandBar Name="FlyCommandBar" DefaultLabelPosition="Right" Grid.Row="0">
                        <AppBarButton Name="AddFlyAppBarButton" Icon="Add" Label="Add" Visibility="Visible" />
                        <AppBarButton Name="DeleteFlyAppBarButton" Icon="Delete" Label="Delete" Visibility="Collapsed"/>
                        <AppBarToggleButton Name="SelectFlyAppBarToggleButton" Label="Select">
                            <AppBarToggleButton.Icon>
                                <FontIcon Glyph="&#xE762;"/>
                            </AppBarToggleButton.Icon>
                        </AppBarToggleButton>
                    </CommandBar>
                    <ListView Name="FlyPatternsListView" ItemsSource="{x:Bind FlyPatterns}" SelectionMode="Single" Grid.Row="1" IsItemClickEnabled="True">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="data:FlyPattern">
                                <controls:FlyPatternTemplateControl/>
                            </DataTemplate>
                        </ListView.ItemTemplate>                        
                    </ListView>
                </Grid>
            </SplitView.Pane>
        </SplitView>
        <Grid Grid.Row="2" HorizontalAlignment="Right">
            <Button Name="AllFliesViewButton" Content="View All Flies" HorizontalAlignment="Left" Margin="0,0,10,10" Click="AllFliesViewButton_Click"/>
        </Grid>
    </Grid>
</Page>
